<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="number" class="text-light">Product Number</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="product_number" value="" placeholder="1212123xxx">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="text" name="product_name" value="" placeholder="nama barang...">
        </div>
        <div class="form-group">
            <label for="payment" class="text-light">Payment</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="payment" value="Cash" >
                <label for="radio-2" class="radio-label">Cash</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="payment" value="Credit" >
                <label for="radio-3" class="radio-label">Credit</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="New" >
                <label for="radio-4" class="radio-label">New</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Second" >
                <label for="radio-5" class="radio-label">Second</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>