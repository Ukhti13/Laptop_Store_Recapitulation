
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Data</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Data</h2>
            <span class="text-light">Use the below form to Update an data</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="number" class="text-light">Product Number</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="product_number" value="<%= user.product_number %>" placeholder="1212123xxx">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="text" name="product_name" value="<%= user.product_name%>" placeholder="nama barang...">
        </div>
        <div class="form-group">
            <label for="payment" class="text-light">Payment</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="payment" value="Cash" <%= user.payment == 'Cash' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Cash</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="payment" value="Credit"  <%= user.gender == 'Credit' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Credit</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="New" <%= user.status == 'New' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">New</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Second" <%= user.status == 'Second' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Second</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->